			.container{max-width:980px;margin:40px auto;padding:24px}
			.hero{display:flex;gap:24px;align-items:center}
			.badge{background:linear-gradient(90deg,var(--accent),#06b6d4);color:white;padding:6px 12px;border-radius:999px;font-weight:700;font-size:13px}
			h1{font-family:'Roboto Slab', serif;font-size:48px;line-height:1.02;margin:0;color:white}
			h1 .name{font-size:56px;color:var(--accent);display:inline-block;margin-left:8px}
			p.lead{color:var(--muted);font-size:18px;margin:12px 0 0}
			.controls{margin-top:18px;display:flex;gap:12px;flex-wrap:wrap}
			.btn{background:var(--accent);color:white;padding:10px 16px;border-radius:10px;border:0;cursor:pointer;font-weight:700}
			.btn.ghost{background:transparent;border:1px solid rgba(255,255,255,0.06)}
			.card{background:linear-gradient(180deg, rgba(255,255,255,0.02), rgba(255,255,255,0.01));padding:18px;border-radius:14px;margin-top:22px;box-shadow:0 6px 20px rgba(2,6,23,0.6)}
			.grid{display:grid;grid-template-columns:1fr 320px;gap:18px;margin-top:18px}
			label{display:block;color:var(--muted);font-size:13px;margin-bottom:6px}
