			<footer>
				Built for Bijay — keep showing up. Small steps compound into big outcomes.
			</footer>
		</div>

		<script>
			// Simple localStorage-backed goal & motivation features
			const goalInput = document.getElementById('goalInput');
			const notes = document.getElementById('notes');
			const saveGoal = document.getElementById('saveGoal');
			const savedGoal = document.getElementById('savedGoal');
			const motivateBtn = document.getElementById('motivateBtn');
			const motivationArea = document.getElementById('motivationArea');
			const tipBtn = document.getElementById('tipBtn');
			const tipArea = document.getElementById('tipArea');
			const dailyWin = document.getElementById('dailyWin');
			const resetGoals = document.getElementById('resetGoals');
			const completeGoal = document.getElementById('completeGoal');

			const MOTIVATIONS = [
				"Discipline isn't built in a day. Start with 10 minutes and keep the streak.",
				"You don't need perfect conditions — you only need a system and the courage to start.",
				"Every small project you finish trains you to finish the next one faster.",
				"Focus on showing up. When you show up every day, momentum does the rest.",
				"Failures are data. Learn, iterate, and ship again."
			];

			const TIPS = [
				"Make one habit tiny: 10 minutes of focused work without distractions.",
				"Write the next 3 steps for any big goal; pick the easiest and do it now.",
				"Use a simple timer (25min) and one distraction list to capture interruptions.",
				"Celebrate tiny wins. Marking progress boosts motivation and grit."
			];

			function loadSaved(){
				const s = localStorage.getItem('bijay.goal');
				const n = localStorage.getItem('bijay.notes');
				const win = localStorage.getItem('bijay.dailyWin');
				if(s){ savedGoal.textContent = s; goalInput.value = s; }
				if(n){ notes.value = n; }
				if(win){ dailyWin.textContent = win; }
			}

			saveGoal.addEventListener('click', ()=>{
				const g = goalInput.value.trim();
				const nt = notes.value.trim();
				if(!g){ alert('Please enter a goal to save.'); return; }
				localStorage.setItem('bijay.goal', g);
				localStorage.setItem('bijay.notes', nt);
				savedGoal.textContent = g;
				dailyWin.textContent = 'Saved — now take one tiny step!';
			});

			completeGoal.addEventListener('click', ()=>{
				const g = localStorage.getItem('bijay.goal');
				if(!g){ alert('No saved goal to complete. Save one first.'); return; }
				const completed = `Completed: ${g} — ${new Date().toLocaleDateString()}`;
				localStorage.setItem('bijay.dailyWin', completed);
				dailyWin.textContent = completed;
				// small encouragement
				motivationArea.textContent = 'Amazing — finishing projects trains you to finish bigger projects. Keep going.';
			});

			motivateBtn.addEventListener('click', ()=>{
				const m = MOTIVATIONS[Math.floor(Math.random()*MOTIVATIONS.length)];
				motivationArea.textContent = m;
			});

			tipBtn.addEventListener('click', ()=>{
				const t = TIPS[Math.floor(Math.random()*TIPS.length)];
				tipArea.textContent = t;
			});

			resetGoals.addEventListener('click', ()=>{
				if(!confirm('Reset saved goal and notes?')) return;
				localStorage.removeItem('bijay.goal');
				localStorage.removeItem('bijay.notes');
				localStorage.removeItem('bijay.dailyWin');
				goalInput.value = '';
				notes.value = '';
				savedGoal.textContent = '— no saved goal —';
				dailyWin.textContent = 'No win yet — add one below';
				motivationArea.textContent = 'Press "Get a motivational message" to receive a short boost.';
			});

			// simple keyboard shortcut: press M for motivation
			window.addEventListener('keydown', (e)=>{
				if(e.key.toLowerCase()==='m') motivateBtn.click();
				if(e.key.toLowerCase()==='g') goalInput.focus();
			});

			// init
			loadSaved();
		</script>
	</body>
</html>
